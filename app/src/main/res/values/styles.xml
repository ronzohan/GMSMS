<resources>
    <!-- Textview style -->
    <style name="RoundEditText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_marginLeft">@dimen/margin_regular</item>
        <item name="android:layout_marginRight">@dimen/margin_regular</item>
        <item name="android:padding">@dimen/padding_regular</item>
        <item name="android:background">@drawable/round_edittext</item>
    </style>

    <!-- Colon text -->
    <style name="colon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:text">@string/colon</item>
    </style>

    <!-- No min height and width of button -->
    <style name="NoSpacingButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">@dimen/button_min_size</item>
        <item name="android:minWidth">@dimen/button_min_size</item>

    </style>

</resources>
